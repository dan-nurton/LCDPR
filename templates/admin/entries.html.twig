{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">Tableau de bord de {{ author.name }} {% if author.isAdmin %} (Administrateur){% endif %}</h1>
            <p class="lead blog-description"></p>
        </div>

        <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">


                        <div class="alert alert-" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>

                        </div>


            </div>
            <div class="col-md-12 col-lg-12 col-xl-12">

            </div>
            <div class="col-sm-12 blog-main">
                <table class="table table-striped">
                    {% if author.isAdmin %}
                    <thead>
                    <th colspan="5" style="text-align: center;background-color: #343a40;color:white;">Critiques</th>
                    </thead>
                    {% endif %}
                    <thead>
                    <th>Titre</th>
                    <th>Crée le</th>
                    <th>Mis à jour le</th>
                    {% if author.isAdmin %}
                    <th>Auteur</th>
                    {% endif %}
                    <th>Action</th>
                    </thead>
                    {% for blogPost in blogPosts %}
                        <tr>
                            <td>{{ blogPost.title }}</td>
                            <td>{{ blogPost.createdAt|date('Y-m-d') }}</td>
                            <td>{{ blogPost.updatedAt|date('Y-m-d H:i') }}</td>
                            {% if author.isAdmin %}
                            <td>{{ blogPost.author.surname}} {{ blogPost.author.name}}</td>
                            {% endif %}
                            <td><a class="btn btn-danger"{% if author.isAdmin %}href="{{ path('admin_delete_all_entry', {'entryId': blogPost.id}) }}"{% else %}href="{{ path('admin_delete_entry', {'entryId': blogPost.id}) }}"{% endif %} >Supprimer</a></td>
                            <td><a class="btn btn-info" {% if author.isAdmin %}href="{{ path('admin_update_all_entry', {'entryId': blogPost.id}) }}"{% else %}href="{{ path('admin_update_entry', {'entryId': blogPost.id}) }}"{% endif %}>Editer</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No entries available</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
                    {% if author.isAdmin %}
                    <div class="col-sm-12 author-main" style="margin-top: 50px;">
                        <table class="table table-striped" >
                            <thead>
                            <th colspan="6" style="text-align: center;background-color: #343a40;color: white;">Auteurs</th>
                            </thead>
                            <thead>
                            <th>Prénom</th>
                            <th>Nom de famille</th>
                            <th>Pseudo</th>
                            <th>E-mail</th>
                            <th>Nb posts</th>
                            <th>Action</th>
                            </thead>
                            {% for author in authors%}
                            <tr>
                                <td>{{author.name }}</td>
                                <td>{{ author.surname}}</td>
                                <td>{{ author.pseudo }}</td>
                                <td>{{ author.email }}</td>
                               {% for key, blogPostsCount in blogPostsCounts%}{% if key == author.pseudo%} <td>{{ blogPostsCount }}</td>{% endif %}{% endfor %}
                                <td><a class="btn btn-danger" href="{{ path('author_delete_entry', {'entryId': author.id}) }}">Supprimer</a></td>
                            </tr>
                            {% endfor %}
                            {% endif %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}

