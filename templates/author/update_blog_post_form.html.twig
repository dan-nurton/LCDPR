{% extends 'base.html.twig' %}
{% block body %}
    <section class="formulaire">
        <div class="containerService">
            <div class="row">
                <div class="offset-lg-3 col-lg-6 col-sm-12 col-centered">
                    <div class="panel panel-default">
                        <div class="card card-outline-secondary">
                            <div class="card-header">
                                <h3 class="mb-0">Edition Critiques</h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                <fieldset>
                                    <div class="row mb-1">
                                        <div class="col-lg-12">
                                            {{ form_row(form.title) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-lg-12">
                                            {{ form_row(form.category) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-lg-12">
                                            {{ form_row(form.cover) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-lg-12">
                                            {{ form_row(form.description) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-lg-12">
                                            {{ form_row(form.review) }}
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="form-group col-md-4 pull-right">
                                            {{ form_row(form.update) }}
                                        </div>
                                    </div>
                                </fieldset>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}