{% extends 'base.html.twig' %}
{% block body %}
    <section class="formulaire">
        <div class="containerService">
            <div class="row">
                <div class="offset-lg-3 col-lg-6 offset-sm-3 col-sm-6 col-centered">
                    <div class="panel panel-default">
                        <div class="card card-outline-secondary">
                            <div class="card-header">
                                <h3 class="mb-0">Edition Auteur</h3>
                            </div>

                            <div class="card-body">
                                {{ form_start(form) }}
                                    <fieldset>
                                        <div class="row mb-1">
                                            <div class="col-lg-12">
                                                {{ form_row(form.surname) }}
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="col-lg-12">
                                                {{ form_row(form.name) }}
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="col-lg-12">
                                                {{ form_row(form.pseudo) }}
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="col-lg-12">
                                                {{ form_row(form.email) }}
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="col-lg-12">
                                                {{ form_row(form.shortBio) }}
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="col-lg-12 admin">
                                                {{ form_row(form.isAdmin) }}
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="form-group col-md-4 pull-right">
                                                {{ form_row(form.submit) }}
                                            </div>
                                        </div>

                                    </fieldset>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}